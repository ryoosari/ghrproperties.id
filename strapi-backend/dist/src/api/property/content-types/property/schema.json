{
    "kind": "collectionType",
    "collectionName": "properties",
    "info": {
        "singularName": "property",
        "pluralName": "properties",
        "displayName": "Property",
        "description": "Real estate property listings"
    },
    "options": {
        "draftAndPublish": true
    },
    "attributes": {
        "Title": {
            "type": "string",
            "required": true
        },
        "Description": {
            "type": "text"
        },
        "Image": {
            "type": "media",
            "multiple": true,
            "required": false,
            "allowedTypes": [
                "images",
                "files",
                "videos",
                "audios"
            ]
        },
        "IsFeatured": {
            "type": "boolean",
            "default": false,
            "description": "Flag indicating whether this property should be displayed in the featured section on the home page"
        },
        "Price": {
            "type": "integer",
            "min": 0,
            "description": "Property price"
        },
        "Bedrooms": {
            "type": "integer",
            "min": 0,
            "default": 0,
            "required": true,
            "description": "Number of bedrooms in the property"
        },
        "Bathrooms": {
            "type": "integer",
            "min": 0,
            "default": 0,
            "required": true,
            "description": "Number of bathrooms in the property"
        },
        "Area": {
            "type": "integer",
            "min": 0,
            "default": 0,
            "description": "Size of the property in square meters (includes both building and land area)",
            "required": true
        },
        "LandSize": {
            "type": "integer",
            "min": 0,
            "default": 0,
            "description": "Size of the land in square meters (excluding building area)"
        },
        "PropertyType": {
            "type": "enumeration",
            "enum": [
                "Villa",
                "Apartment",
                "House",
                "Land",
                "Commercial",
                "Hotel",
                "Restaurant"
            ],
            "default": "Villa",
            "required": true,
            "description": "Type of property"
        },
        "Slug": {
            "type": "uid",
            "targetField": "Title",
            "required": true,
            "unique": true
        },
        "Location": {
            "type": "enumeration",
            "enum": [
                "Kuta, Bali",
                "Seminyak, Bali",
                "Ubud, Bali",
                "Canggu, Bali",
                "Denpasar, Bali",
                "Sanur, Bali",
                "Nusa Dua, Bali",
                "Jimbaran, Bali",
                "Uluwatu, Bali",
                "Legian, Bali",
                "Tabanan, Bali",
                "Gianyar, Bali",
                "Amed, Bali",
                "Lovina, Bali"
            ],
            "description": "The area where the property is located",
            "default": "Kuta, Bali",
            "required": true
        },
        "propertyLocation": {
            "type": "component",
            "component": "shared.location",
            "description": "Detailed location information including address and coordinates"
        },
        "Amenities": {
            "type": "component",
            "component": "property.amenities",
            "repeatable": true,
            "required": true,
            "min": 1,
            "description": "Select multiple amenities for this property"
        },
        "YearBuilt": {
            "type": "integer",
            "description": "The year the property was constructed"
        },
        "Furnishing": {
            "type": "enumeration",
            "enum": [
                "Fully Furnished",
                "Semi-Furnished",
                "Unfurnished"
            ],
            "default": "Fully Furnished",
            "description": "The furnishing status of the property"
        },
        "View": {
            "type": "string",
            "description": "What can be seen from the property (e.g., Ocean View, Garden View)"
        },
        "LocationHighlights": {
            "type": "text",
            "description": "Notable highlights about the property's location"
        },
        "DesignStyle": {
            "type": "string",
            "description": "Architectural style or design features of the property"
        },
        "Connectivity": {
            "type": "text",
            "description": "Internet and connectivity options available"
        },
        "EnergyFeatures": {
            "type": "text",
            "description": "Energy-saving or sustainable features of the property"
        },
        "SecurityFeatures": {
            "type": "text",
            "description": "Security systems and features of the property"
        },
        "OutdoorFeatures": {
            "type": "text",
            "description": "Details about gardens, balconies, or outdoor areas"
        },
        "SpecialFeatures": {
            "type": "richtext",
            "description": "Unique or special features that make this property stand out"
        },
        "VideoURL": {
            "type": "string",
            "description": "URL link to a video tour of the property"
        },
        "Neighborhood": {
            "type": "string",
            "description": "Information about the neighborhood surrounding the property"
        },
        "Availability": {
            "type": "enumeration",
            "enum": [
                "Available Now",
                "Coming Soon",
                "Under Contract",
                "Sold"
            ],
            "default": "Available Now",
            "description": "Current availability status of the property"
        },
        "Kitchens": {
            "type": "integer",
            "min": 0,
            "default": 1,
            "description": "Number of kitchens in the property"
        },
        "LivingRooms": {
            "type": "integer",
            "min": 0,
            "default": 1,
            "description": "Number of living rooms in the property"
        },
        "Status": {
            "type": "enumeration",
            "enum": [
                "For Sale",
                "For Rent",
                "Sold",
                "Rented"
            ],
            "default": "For Sale",
            "description": "Current status of the property"
        }
    }
}
