{
    "kind": "collectionType",
    "collectionName": "properties",
    "info": {
        "singularName": "property",
        "pluralName": "properties",
        "displayName": "Property",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "attributes": {
        "Title": {
            "type": "string"
        },
        "Description": {
            "type": "text"
        },
        "Image": {
            "allowedTypes": [
                "images",
                "files",
                "videos",
                "audios"
            ],
            "type": "media",
            "multiple": true
        },
        "IsFeatured": {
            "type": "boolean",
            "default": false,
            "description": "Flag indicating whether this property should be displayed in the featured section on the home page"
        },
        "Price": {
            "type": "integer",
            "min": 0
        },
        "Slug": {
            "type": "string",
            "unique": true
        }
    }
}
