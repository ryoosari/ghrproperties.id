{
  "kind": "collectionType",
  "collectionName": "properties",
  "info": {
    "singularName": "property",
    "pluralName": "properties",
    "displayName": "Property",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "Title": {
      "type": "string"
    },
    "Description": {
      "type": "text"
    },
    "Image": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "IsFeatured": {
      "type": "boolean",
      "default": false,
      "description": "Flag indicating whether this property should be displayed in the featured section on the home page"
    },
    "Price": {
      "type": "integer",
      "min": 0
    },
    "Slug": {
      "type": "string",
      "unique": true
    },
    "Location": {
      "type": "enumeration",
      "enum": [
        "Kuta, Bali",
        "Seminyak, Bali",
        "Ubud, Bali",
        "Canggu, Bali",
        "Denpasar, Bali",
        "Sanur, Bali",
        "Nusa Dua, Bali",
        "Jimbaran, Bali",
        "Uluwatu, Bali",
        "Legian, Bali",
        "Tabanan, Bali",
        "Gianyar, Bali",
        "Amed, Bali",
        "Lovina, Bali"
      ],
      "description": "The area where the property is located",
      "default": "Kuta, Bali",
      "required": true
    },
    "propertyLocation": {
      "type": "component",
      "component": "shared.location",
      "description": "Detailed location information including address and coordinates"
    }
  }
}
