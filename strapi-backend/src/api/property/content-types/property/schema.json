{
  "kind": "collectionType",
  "collectionName": "properties",
  "info": {
    "singularName": "property",
    "pluralName": "properties",
    "displayName": "Property",
    "description": "Real estate properties listing"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "for_sale",
        "for_rent",
        "sold",
        "rented"
      ],
      "default": "for_sale",
      "required": true
    },
    "bedrooms": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "bathrooms": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },
    "area": {
      "type": "decimal",
      "min": 0
    },
    "location": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "text"
    },
    "features": {
      "type": "json"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "yearBuilt": {
      "type": "integer"
    },
    "propertyType": {
      "type": "enumeration",
      "enum": [
        "house",
        "apartment",
        "condo",
        "villa",
        "land",
        "commercial"
      ]
    }
  }
} 